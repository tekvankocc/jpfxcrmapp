<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="640.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teky.jpfxcrmapp.controller.AppController">
    <children>
        <FlowPane alignment="CENTER" hgap="10.0" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ddd;">
            <children>
                
                <Button mnemonicParsing="false" onAction="#menuClick" text="Ügyfél rögzítés">
                    <properties command="new-customer" />
                </Button>
                
                <Button mnemonicParsing="false" onAction="#menuClick" text="Ügyfelek listája">
                    <properties command="customers" />
                </Button>
                
                <Button mnemonicParsing="false" onAction="#menuClick" text="Szerződés rögzítés">
                    <properties command="new-contract" />
                </Button>
                
                <Button mnemonicParsing="false" onAction="#menuClick" text="Szerződések listája">
                    <properties command="contracts" />
                </Button>
                
      
            </children>
        </FlowPane>
        <FlowPane alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
            <children>
                <Label fx:id="txtTitle" text="Title of Activity">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </FlowPane>
        <VBox fx:id="container" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</VBox>
